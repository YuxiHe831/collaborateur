<%= form_for :post do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
 
  <p>
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </p>

  <p>
    <%= f.label :looking_for_a %><br>
    <%= f.radio_button :person, :kind %> <%= f.label :person %><br>
    <%= f.radio_button :project, :kind %> <%= f.label :project %><br>
  </p>
  
  <p>
    <%= f.label :about_me %><br>
    <%= f.text_area :about_me %>
  </p>

  <p>
    <%= f.label :about_you %><br>
    <%= f.text_area :about_you %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>

