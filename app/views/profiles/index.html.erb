<h1>Collaborateur</h1>

<%= form_tag profiles_path, :method => 'get' do %>
    <p>
      <%= select_tag "search",
                     options_for_select([["People", "People"],
                                         ["Projects", "Projects"]]) %>
      <%= submit_tag "Search", :name => nil %>
    </p>
<% end %>
 
<table class="table table-hover">
  <tr>
    <th>Name</th>
    <th>Email Address</th>
    <th>Looking For</th>
  </tr>
 
  <% @profiles.each do |profile| %>
    <tr>
      <td><%= link_to profile.name, profile %></td>
      <td><%= profile.email %></td>
      <td><%= profile.kind %></td>
    </tr>
  <% end %>
</table>
